{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@monorepo/sdk": ["../sdk/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}